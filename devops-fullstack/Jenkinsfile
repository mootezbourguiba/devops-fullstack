pipeline {
    agent any // Ex√©cute sur n'importe quel agent disponible

    tools {
        jdk 'jdk17'  // JDK 17 configur√© dans Jenkins
        maven 'apache-maven-3.8.6' // Maven configur√© dans Jenkins
        nodejs 'node-20' // Node.js configur√© dans Jenkins
    }

    environment {
        // Docker Hub Credentials
        DOCKERHUB_CREDENTIALS_ID = 'dockerhub-credentials'
        DOCKERHUB_USERNAME       = "mootezbourguiba365"
        IMAGE_FRONTEND           = "${DOCKERHUB_USERNAME}/devops-frontend:latest"
        IMAGE_BACKEND            = "${DOCKERHUB_USERNAME}/devops-backend:latest"

        // SSH Deployment
        SSH_CREDENTIALS_ID       = 'ssh-credentials-mon-serveur'
        SSH_SERVER_NAME          = 'ssh-mon-serveur'
        REMOTE_DEPLOY_PATH       = '/home/user/devops-app'
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'üì• R√©cup√©ration du code depuis GitHub...'
                checkout scm
            }
        }

        stage('Build et Test Backend') {
            steps {
                echo '‚öôÔ∏è Construction et test du backend Spring Boot...'
                dir('backend/backendDevops') {
                    sh """
                        set -e
                        mvn clean package
                    """
                }
            }
            post {
                success {
                    archiveArtifacts artifacts: 'backend/backendDevops/target/*.jar', fingerprint: true
                }
            }
        }

        stage('Build Frontend') {
            steps {
                echo 'üåê Construction du frontend React...'
                dir('frontend') {
                    sh """
                        set -e
                        npm install
                        npm run build
                    """
                }
            }
            post {
                success {
                    archiveArtifacts artifacts: 'frontend/build/**', fingerprint: true
                }
            }
        }

        stage('Build et Push Docker Images') {
            steps {
                echo "üê≥ Connexion √† Docker Hub (${DOCKERHUB_USERNAME})..."
                withCredentials([usernamePassword(credentialsId: env.DOCKERHUB_CREDENTIALS_ID,
                                                 passwordVariable: 'DOCKERHUB_PASSWORD',
                                                 usernameVariable: 'DOCKERHUB_USER')]) {
                    sh """
                        set -e
                        docker login -u '${DOCKERHUB_USERNAME}' -p '${DOCKERHUB_PASSWORD}'
                    """

                    echo "üì¶ Construction de l'image backend: ${IMAGE_BACKEND}"
                    dir('backend/backendDevops') {
                        sh """
                            set -e
                            docker build -t ${IMAGE_BACKEND} .
                        """
                    }
                    sh "docker push ${IMAGE_BACKEND}"

                    echo "üì¶ Construction de l'image frontend: ${IMAGE_FRONTEND}"
                    dir('frontend') {
                        sh """
                            set -e
                            docker build -t ${IMAGE_FRONTEND} .
                        """
                    }
                    sh "docker push ${IMAGE_FRONTEND}"

                    sh 'docker logout'
                }
            }
        }

        stage('Deploy to Remote Server via SSH') {
            steps {
                echo "üöÄ D√©ploiement sur le serveur distant..."
                sshagent(credentials: [env.SSH_CREDENTIALS_ID]) {
                    echo "üì§ Copie de docker-compose.yml vers ${REMOTE_DEPLOY_PATH}..."
                    sh """
                        set -e
                        scp -o StrictHostKeyChecking=no docker-compose.yml user@your_server_ip:${REMOTE_DEPLOY_PATH}/docker-compose.yml
                    """

                    echo "üîÑ Ex√©cution de docker-compose sur le serveur distant..."
                    sh """
                        ssh -o StrictHostKeyChecking=no user@your_server_ip "
                        cd ${REMOTE_DEPLOY_PATH} &&
                        docker-compose pull &&
                        docker-compose up -d
                        "
                    """
                }
            }
        }
    }

    post {
        always {
            echo 'üßπ Nettoyage du workspace...'
            cleanWs()
        }
        success {
            echo '‚úÖ Pipeline termin√© avec succ√®s !'
        }
        failure {
            echo '‚ùå Le Pipeline a √©chou√© !'
        }
    }
}
